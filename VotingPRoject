#  include <iostream>
using namespace std;

int age;
int main(){
    cout<< "Tell me your age,"<<endl; 
    cout<< "then I will tell you that you are perfect for voting or not:"<<endl;
    cin>>age;

    // ********VOTING CRITERIA USING IF ELSE LOOP*******
    if((age<18) && (age>0)){
    cout<< "You are not perfect for voting.";
    }
    else if(age==18){
    cout<< "You are perfect for voting.";
    }
    else if(age<=0){
    cout<< "You are not born yet.";
    }
    else{
    cout<< "You are obviously perfect for voting.";
    };
    return 0;
}
